{
  "manifest_version": 3,
  "name": "Chess Engine Assistant",
  "version": "1.0",
  "description": "Real-time chess analysis using Stockfish",
  "permissions": ["activeTab"],
  "host_permissions": [
    "https://www.chess.com/*",
    "https://lichess.org/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.chess.com/*",
        "https://lichess.org/*"
      ],
      "js": [
        "lib/chess.js",
        "content/boardReader.js",
        "content/highlighter.js",
        "content/content.js"
      ],
      "css": ["ui/panel.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "engine/engineWorker.js",
        "engine/stockfish.js",
        "engine/stockfish.wasm"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
